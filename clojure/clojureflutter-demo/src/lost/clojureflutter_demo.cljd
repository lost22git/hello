(defn podcast-list-view
  "Create podcast list view"
  []
  (log "[podcast-list-view]")
  (f/widget
   :managed [podcast-list-state (atom {:podcast-list []}) :dispose nil]
   :watch [{:keys [podcast-list]} podcast-list-state]
   (my-refresh-indicator
