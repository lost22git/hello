  (m/LayoutBuilder
   .builder
   (fn [cx ^m/BoxConstraints {:flds [maxHeight]}]
     (f/widget
      (m/Hero .tag image)
      (m/Container
       .width maxHeight
       .height maxHeight)
      .decoration
      (m/BoxDecoration
       .borderRadius  (m/BorderRadius.circular 4))
      .image
      (m/DecorationImage
       .fit m/BoxFit.cover)
      .image
